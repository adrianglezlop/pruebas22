<div class="row card-panel deep-orange lighten-1">  
  <h5 class="center-align ">
    <strong>Nombre del producto:</strong>
    <%= @product.nombre_del_producto %>
  </h5>
</div>
<div class="show row">  
  <p>
    <strong>Registro del contrado de adhesión:</strong>
    <%= @product.registro_del_contrado_de_adhesion %>
  </p>
  
  <p>
    <strong>Plazo de préstamo:</strong>
    <%= @product.plazo_de_prestamo %>
  </p>
  
  <p>
    <strong>Numero de pagos a realizar:</strong>
    <%= @product.numero_de_pagos_a_realizar %>
  </p>
  
  <p>
    <strong>Tipo de préstamo:</strong>
    <%=@product.loan.nombre %>
  </p>
  <p>
    <strong>Forma de pago:</strong>
    <%=@product.payout.nombre %>
  </p>
  <p>
    <strong>Tasa de interés ordinaria:</strong>
    <%= @product.taza_de_interes_ordinaria %>%
  </p>
  
  <p>
    <strong>Tasa de interés moratoria:</strong>
    <%= @product.taza_de_interes_moratoria %>%
  </p>
  
  <p>
    <strong>Cat sin iva:</strong>
    <%= @product.cat_sin_iva %>%
  </p>
  
  <p>
    <strong>Numero de meses de sueldo para préstamo:</strong>
    <%= @product.numero_de_meses_de_sueldo_para_prestamo %>
  </p>
  <p>
    <strong>Plazo de prestamo:</strong>
    <%= @product.plazo %>
  </p>
  <p>
    <strong>Interés moratorio aplicable:</strong>
    <%= @product.interes_moratorio_aplicable %>%
  </p>
  
   <p>
    <strong>Comisión por Apertura:</strong>
    <%= @product.comision_apert %>%
  </p>
</div>
<%= link_to 'Editar', edit_product_path(@product),class:"crud-links" %> |
<%= link_to 'Atras', products_path,class:"crud-links" %>
