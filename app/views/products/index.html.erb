<p id="notice"><%= notice %></p>

<h1>Lista de Productos</h1>

<table class="responsive-table">
  <thead>
    <tr>
      <th>Nombre del producto</th>
      <th>RECA</th>
      <th>Plazo de pr√©stamo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.nombre_del_producto %></td>
        <td><%= product.registro_del_contrado_de_adhesion %></td>
        <td><%= product.plazo_de_prestamo %></td>
        <td><%= link_to 'Mostrar', product,class:'crud-links' %></td>
        <td><%= link_to 'Editar', edit_product_path(product),class:'crud-links' %></td>
        <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Estas seguro de eliminar este producto?' },class:'crud-links' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
  <%= link_to new_product_path,class:"btn-floating btn-large red" do  %>    
    <i class="large material-icons">add</i>
  <%end%>
</div>

