<p id="notice"><%= notice %></p>

<h1>Listas de Empresas</h1>

<table>
  <thead>
    <tr>
      <th>Clave</th>
      <th>Sucursal</th>
      <th>Nombre de la empresa</th>
      <th>Contacto</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.clave %></td>
        <td><%= company.branch_office.nombre%></td>
        <td><%= company.nombre_de_empresa %></td>
        <td><%= company.razon_social %></td>
        <td><%= company.municipio %></td>
        <td><%= company.estado %></td>
        <td><%="#{company.apellido_paterno} #{ company.apellido_materno} #{company.nombre_1} #{company.nombre_2}"  %></td>
   
        <td><%= link_to 'Mostrar', company,class:'crud-links' %></td>
        <td><%= link_to 'Editar', edit_company_path(company),class:'crud-links' %></td>
        <td><%= link_to 'Eliminar', company, method: :delete, data: { confirm: 'Estas seguro de Eliminar esta Empresa?' },class:'crud-links' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
  <%= link_to new_company_path,class:"btn-floating btn-large red" do  %>    
    <i class="large material-icons">add</i>
  <%end%>

</div>
