
     <div class = "row">
       <h1 align="center">PRONOSTICO DE COBRANZA</h1>
         <div class = "col s12 m6 l4">
             <form action="/reports/pronostico_de_cobranza.xlsx" method="get">
                  <label>
                    Sucursales
                  </label>
                 <select class="browser-default" name="sucursal">
                    <% unless current_user.tipo == 3%>
                        <option value="" selected>Todas</option> 
                    <% end %>   
                    <% @branch_offices = BranchOffice.order(:nombre) %>
                    <% @branch_offices = @branch_offices.where(id:current_user.branchOffices[0].id)  if (current_user.tipo == 3) %>
                    <%@branch_offices.all.each do |sucursal| %>
                        <option value=<%=sucursal.id%>><%=sucursal.nombre%></option>
                    <%end%>
                </select>
                <label>
                    Fecha:
                </label>
                 <input type="date" class="datepicker" name="fecha">
                 <input type="submit" class="waves-effect waves-light btn" value="Descargar">
             </form>
               
            </div>
    </div>
